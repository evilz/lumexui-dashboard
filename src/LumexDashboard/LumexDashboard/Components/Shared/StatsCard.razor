@using LumexUI

<LumexCard Class="@Class">
    <LumexCardBody Class="p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-default-500 dark:text-default-400 mb-1">@Title</p>
                <p class="text-2xl font-bold text-default-900 dark:text-white">@Value</p>
                @if (!string.IsNullOrEmpty(Change))
                {
                    <div class="flex items-center gap-1 mt-2">
                        @if (IsPositive)
                        {
                            <svg class="w-4 h-4 text-success" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-sm text-success font-medium">@Change</span>
                        }
                        else
                        {
                            <svg class="w-4 h-4 text-danger" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-sm text-danger font-medium">@Change</span>
                        }
                        <span class="text-xs text-default-400">vs last period</span>
                    </div>
                }
            </div>
            <div class="@IconBackgroundClass w-12 h-12 rounded-xl flex items-center justify-center">
                @Icon
            </div>
        </div>
    </LumexCardBody>
</LumexCard>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string? Change { get; set; }
    [Parameter] public bool IsPositive { get; set; } = true;
    [Parameter] public RenderFragment? Icon { get; set; }
    [Parameter] public string IconBackgroundClass { get; set; } = "bg-primary/10";
    [Parameter] public string? Class { get; set; }
}
