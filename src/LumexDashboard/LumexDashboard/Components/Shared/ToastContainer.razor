@inject IJSRuntime JS
@inject LumexDashboard.Services.AppStateService AppState
@implements IDisposable

<div class="fixed bottom-4 right-4 z-[100] flex flex-col gap-2 max-w-sm">
    @foreach (var toast in _toasts)
    {
        <div class="@GetToastClass(toast) animate-slide-in-right shadow-lg rounded-xl p-4 flex items-start gap-3 min-w-[320px]"
             @key="toast.Id">
            <div class="@GetIconBgClass(toast) w-8 h-8 rounded-lg flex items-center justify-center flex-shrink-0">
                @GetToastIcon(toast.Type)
            </div>
            <div class="flex-1 min-w-0">
                <p class="font-semibold text-sm text-foreground">@toast.Title</p>
                <p class="text-xs text-default-500 mt-0.5">@toast.Message</p>
            </div>
            <button class="p-1 rounded hover:bg-default-200 transition-colors"
                    @onclick="() => RemoveToast(toast.Id)">
                <svg class="w-4 h-4 text-default-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
    }
</div>

<style>
    @@keyframes slide-in-right {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
    .animate-slide-in-right {
        animation: slide-in-right 0.3s ease-out;
    }
</style>

@code {
    private readonly List<ToastItem> _toasts = new();
    private int _toastCounter = 0;

    protected override void OnInitialized()
    {
        AppState.OnToast += HandleToast;
    }

    private void HandleToast(LumexDashboard.Services.ToastMessage message)
    {
        var type = message.Type switch
        {
            LumexDashboard.Services.ToastType.Success => ToastType.Success,
            LumexDashboard.Services.ToastType.Error => ToastType.Error,
            LumexDashboard.Services.ToastType.Warning => ToastType.Warning,
            _ => ToastType.Info
        };
        
        var toast = new ToastItem(++_toastCounter, message.Title, message.Message, type);
        _toasts.Add(toast);
        
        InvokeAsync(StateHasChanged);

        // Auto-remove after 4 seconds
        _ = Task.Delay(4000).ContinueWith(_ =>
        {
            InvokeAsync(() =>
            {
                RemoveToast(toast.Id);
            });
        });
    }

    private void RemoveToast(int id)
    {
        var toast = _toasts.FirstOrDefault(t => t.Id == id);
        if (toast != null)
        {
            _toasts.Remove(toast);
            InvokeAsync(StateHasChanged);
        }
    }

    private string GetToastClass(ToastItem toast) => toast.Type switch
    {
        ToastType.Success => "bg-success/10 border border-success/20",
        ToastType.Error => "bg-danger/10 border border-danger/20",
        ToastType.Warning => "bg-warning/10 border border-warning/20",
        _ => "bg-default-100 border border-default-200"
    };

    private string GetIconBgClass(ToastItem toast) => toast.Type switch
    {
        ToastType.Success => "bg-success/20",
        ToastType.Error => "bg-danger/20",
        ToastType.Warning => "bg-warning/20",
        _ => "bg-primary/20"
    };

    private RenderFragment GetToastIcon(ToastType type) => type switch
    {
        ToastType.Success => @<svg class="w-4 h-4 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>,
        ToastType.Error => @<svg class="w-4 h-4 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>,
        ToastType.Warning => @<svg class="w-4 h-4 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>,
        _ => @<svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
    };

    public void Dispose()
    {
        AppState.OnToast -= HandleToast;
    }

    public enum ToastType { Info, Success, Warning, Error }
    private record ToastItem(int Id, string Title, string Message, ToastType Type);
}
