@page "/finance"
@rendermode InteractiveServer

<PageTitle>Finance Dashboard</PageTitle>

<div class="flex gap-6">
    <!-- Main Content -->
    <div class="flex-1 space-y-6">
        <!-- Financial Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <LumexCard Class="rounded-2xl">
                <LumexCardBody Class="p-5">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-default-500 mb-1">Total Income</p>
                            <p class="text-2xl font-bold text-default-800 dark:text-default-100">$24,580</p>
                            <div class="flex items-center gap-1 mt-2">
                                <span class="text-xs px-2 py-0.5 rounded-full bg-success/10 text-success font-medium">+12.5%</span>
                                <span class="text-xs text-default-400">vs last month</span>
                            </div>
                        </div>
                        <div class="w-12 h-12 rounded-xl bg-success/10 flex items-center justify-center">
                            <svg class="w-6 h-6 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                            </svg>
                        </div>
                    </div>
                </LumexCardBody>
            </LumexCard>

            <LumexCard Class="rounded-2xl">
                <LumexCardBody Class="p-5">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-default-500 mb-1">Total Expenses</p>
                            <p class="text-2xl font-bold text-default-800 dark:text-default-100">$18,240</p>
                            <div class="flex items-center gap-1 mt-2">
                                <span class="text-xs px-2 py-0.5 rounded-full bg-danger/10 text-danger font-medium">+8.2%</span>
                                <span class="text-xs text-default-400">vs last month</span>
                            </div>
                        </div>
                        <div class="w-12 h-12 rounded-xl bg-danger/10 flex items-center justify-center">
                            <svg class="w-6 h-6 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>
                            </svg>
                        </div>
                    </div>
                </LumexCardBody>
            </LumexCard>

            <LumexCard Class="rounded-2xl">
                <LumexCardBody Class="p-5">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-default-500 mb-1">Net Revenue</p>
                            <p class="text-2xl font-bold text-default-800 dark:text-default-100">$6,340</p>
                            <div class="flex items-center gap-1 mt-2">
                                <span class="text-xs px-2 py-0.5 rounded-full bg-primary/10 text-primary font-medium">+24.3%</span>
                                <span class="text-xs text-default-400">vs last month</span>
                            </div>
                        </div>
                        <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                        </div>
                    </div>
                </LumexCardBody>
            </LumexCard>
        </div>

        <!-- Payment Cards Section -->
        <div class="space-y-4">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-default-800 dark:text-default-100">My Cards</h2>
                <LumexButton Variant="Variant.Light" Size="Size.Small">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Add Card
                </LumexButton>
            </div>
            <div class="flex gap-4 overflow-x-auto pb-2">
                @foreach (var card in _paymentCards)
                {
                    <div class="flex-shrink-0 w-72 h-44 rounded-2xl p-5 text-white relative overflow-hidden @card.Gradient">
                        <!-- Card pattern overlay -->
                        <div class="absolute inset-0 opacity-10">
                            <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                                <circle cx="80" cy="20" r="40" fill="white"/>
                                <circle cx="90" cy="80" r="30" fill="white"/>
                            </svg>
                        </div>
                        <div class="relative z-10 h-full flex flex-col justify-between">
                            <div class="flex items-start justify-between">
                                <div>
                                    <p class="text-xs text-white/70">@card.Type</p>
                                    <p class="text-lg font-semibold">@card.Bank</p>
                                </div>
                                @card.Logo
                            </div>
                            <div>
                                <p class="text-lg tracking-widest font-mono mb-2">‚Ä¢‚Ä¢‚Ä¢‚Ä¢ ‚Ä¢‚Ä¢‚Ä¢‚Ä¢ ‚Ä¢‚Ä¢‚Ä¢‚Ä¢ @card.LastFour</p>
                                <div class="flex justify-between text-sm">
                                    <div>
                                        <p class="text-xs text-white/70">Card Holder</p>
                                        <p>@card.Holder</p>
                                    </div>
                                    <div>
                                        <p class="text-xs text-white/70">Expires</p>
                                        <p>@card.Expiry</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Charts Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Monthly Spending Chart -->
            <LumexCard Class="rounded-2xl">
                <LumexCardBody Class="p-5">
                    <div class="flex items-center justify-between mb-6">
                        <div>
                            <h3 class="font-semibold text-default-800 dark:text-default-100">Monthly Statistics</h3>
                            <p class="text-sm text-default-500">Income vs Expenses</p>
                        </div>
                        <LumexDropdown>
                            <LumexDropdownTrigger>
                                <LumexButton Variant="Variant.Flat" Size="Size.Small">
                                    2025
                                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                    </svg>
                                </LumexButton>
                            </LumexDropdownTrigger>
                            <LumexDropdownMenu AriaLabel="Select Year">
                                <LumexDropdownItem Key="2025">2025</LumexDropdownItem>
                                <LumexDropdownItem Key="2024">2024</LumexDropdownItem>
                                <LumexDropdownItem Key="2023">2023</LumexDropdownItem>
                            </LumexDropdownMenu>
                        </LumexDropdown>
                    </div>
                    <!-- Bar Chart -->
                    <div class="h-48 flex items-end justify-between gap-2">
                        @foreach (var month in _monthlyData)
                        {
                            <div class="flex-1 flex flex-col items-center gap-1">
                                <div class="w-full flex gap-1 justify-center items-end h-40">
                                    <div class="w-3 bg-success rounded-t" style="height: @(month.Income / 300.0 * 100)%"></div>
                                    <div class="w-3 bg-danger rounded-t" style="height: @(month.Expense / 300.0 * 100)%"></div>
                                </div>
                                <span class="text-xs text-default-400">@month.Month</span>
                            </div>
                        }
                    </div>
                    <!-- Legend -->
                    <div class="flex items-center justify-center gap-6 mt-4">
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded-full bg-success"></div>
                            <span class="text-sm text-default-500">Income</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded-full bg-danger"></div>
                            <span class="text-sm text-default-500">Expenses</span>
                        </div>
                    </div>
                </LumexCardBody>
            </LumexCard>

            <!-- Category Chart -->
            <LumexCard Class="rounded-2xl">
                <LumexCardBody Class="p-5">
                    <div class="flex items-center justify-between mb-6">
                        <div>
                            <h3 class="font-semibold text-default-800 dark:text-default-100">Spending by Category</h3>
                            <p class="text-sm text-default-500">November 2025</p>
                        </div>
                        <LumexTabs Size="Size.Small" Color="ThemeColor.Primary" SelectedKey="@_categoryTab" SelectedKeyChanged="@((string key) => _categoryTab = key)">
                            <LumexTab Key="expense" Title="Expense" />
                            <LumexTab Key="income" Title="Income" />
                        </LumexTabs>
                    </div>
                    
                    <!-- Donut Chart Visualization -->
                    <div class="flex items-center gap-6">
                        <div class="relative w-36 h-36 flex-shrink-0">
                            <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
                                @{
                                    var categories = _categoryTab == "expense" ? _expenseCategories : _incomeCategories;
                                    double offset = 0;
                                }
                                @foreach (var cat in categories)
                                {
                                    var dashArray = cat.Percentage * 2.51;
                                    var dashOffset = -offset * 2.51;
                                    <circle cx="50" cy="50" r="40" fill="none" stroke="@cat.Color" stroke-width="12"
                                            stroke-dasharray="@dashArray 251" stroke-dashoffset="@dashOffset" />
                                    offset += cat.Percentage;
                                }
                            </svg>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <div class="text-center">
                                    <p class="text-xl font-bold text-default-800 dark:text-default-100">
                                        @(_categoryTab == "expense" ? "$18,240" : "$24,580")
                                    </p>
                                    <p class="text-xs text-default-500">Total</p>
                                </div>
                            </div>
                        </div>
                        <div class="flex-1 space-y-3">
                            @foreach (var cat in (_categoryTab == "expense" ? _expenseCategories : _incomeCategories))
                            {
                                <div class="flex items-center gap-3">
                                    <div class="w-3 h-3 rounded-full" style="background-color: @cat.Color"></div>
                                    <div class="flex-1 min-w-0">
                                        <div class="flex justify-between mb-1">
                                            <span class="text-sm text-default-700 dark:text-default-300 truncate">@cat.Name</span>
                                            <span class="text-sm font-medium text-default-800 dark:text-default-100">@cat.Percentage%</span>
                                        </div>
                                        <div class="h-1.5 bg-default-200 dark:bg-default-700 rounded-full overflow-hidden">
                                            <div class="h-full rounded-full" style="width: @(cat.Percentage)%; background-color: @cat.Color"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </LumexCardBody>
            </LumexCard>
        </div>

        <!-- Transactions & Subscriptions -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Recent Transactions -->
            <LumexCard Class="rounded-2xl">
                <LumexCardBody Class="p-5">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="font-semibold text-default-800 dark:text-default-100">Recent Transactions</h3>
                        <LumexButton Variant="Variant.Light" Size="Size.Small">See All</LumexButton>
                    </div>
                    <div class="space-y-4">
                        @foreach (var tx in _transactions)
                        {
                            <div class="flex items-center gap-4">
                                <div class="w-10 h-10 rounded-xl @tx.IconBg flex items-center justify-center flex-shrink-0">
                                    @tx.Icon
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-default-800 dark:text-default-100 truncate">@tx.Name</p>
                                    <p class="text-sm text-default-500">@tx.Category ‚Ä¢ @tx.Date.ToString("MMM d")</p>
                                </div>
                                <p class="font-semibold @(tx.IsIncome ? "text-success" : "text-default-800 dark:text-default-100")">
                                    @(tx.IsIncome ? "+" : "-")$@tx.Amount.ToString("N0")
                                </p>
                            </div>
                        }
                    </div>
                </LumexCardBody>
            </LumexCard>

            <!-- Active Subscriptions -->
            <LumexCard Class="rounded-2xl">
                <LumexCardBody Class="p-5">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="font-semibold text-default-800 dark:text-default-100">Active Subscriptions</h3>
                        <LumexButton Variant="Variant.Light" Size="Size.Small">Manage</LumexButton>
                    </div>
                    <div class="space-y-4">
                        @foreach (var sub in _subscriptions)
                        {
                            <div class="flex items-center gap-4">
                                <div class="w-10 h-10 rounded-xl @sub.IconBg flex items-center justify-center flex-shrink-0">
                                    @sub.Icon
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-default-800 dark:text-default-100 truncate">@sub.Name</p>
                                    <p class="text-sm text-default-500">Next billing: @sub.NextBilling.ToString("MMM d, yyyy")</p>
                                </div>
                                <div class="text-right">
                                    <p class="font-semibold text-default-800 dark:text-default-100">$@sub.Price</p>
                                    <p class="text-xs text-default-400">/@sub.Cycle</p>
                                </div>
                            </div>
                        }
                    </div>
                </LumexCardBody>
            </LumexCard>
        </div>
    </div>

    <!-- Right Sidebar -->
    <aside class="w-80 flex-shrink-0 space-y-6 hidden xl:block">
        <!-- User Profile Card -->
        <LumexCard Class="rounded-2xl">
            <LumexCardBody Class="p-6 text-center">
                <LumexAvatar Name="Jason Miller" Size="Size.Large" Class="w-20 h-20 mx-auto mb-4" />
                <h3 class="text-lg font-semibold text-default-800 dark:text-default-100">Jason Miller</h3>
                <p class="text-sm text-default-500 mb-4">Premium Member</p>
                <LumexChip Size="Size.Small" Variant="ChipVariant.Flat" Color="ThemeColor.Success" Class="mb-4">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Verified
                </LumexChip>
            </LumexCardBody>
        </LumexCard>

        <!-- Wallet Balance -->
        <LumexCard Class="rounded-2xl overflow-hidden">
            <div class="bg-gradient-to-br from-violet-600 to-indigo-700 p-6 text-white">
                <p class="text-sm text-white/70 mb-1">Wallet Balance</p>
                <p class="text-3xl font-bold mb-1">$12,450.80</p>
                <p class="text-sm text-white/70">Available to spend</p>
            </div>
            <LumexCardBody Class="p-4">
                <!-- Quick Actions -->
                <div class="grid grid-cols-3 gap-2">
                    <button class="flex flex-col items-center gap-2 p-3 rounded-xl hover:bg-default-100 dark:hover:bg-default-800 transition-colors">
                        <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
                            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                            </svg>
                        </div>
                        <span class="text-xs font-medium text-default-600 dark:text-default-400">Send</span>
                    </button>
                    <button class="flex flex-col items-center gap-2 p-3 rounded-xl hover:bg-default-100 dark:hover:bg-default-800 transition-colors">
                        <div class="w-10 h-10 rounded-full bg-success/10 flex items-center justify-center">
                            <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                            </svg>
                        </div>
                        <span class="text-xs font-medium text-default-600 dark:text-default-400">Receive</span>
                    </button>
                    <button class="flex flex-col items-center gap-2 p-3 rounded-xl hover:bg-default-100 dark:hover:bg-default-800 transition-colors">
                        <div class="w-10 h-10 rounded-full bg-warning/10 flex items-center justify-center">
                            <svg class="w-5 h-5 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                        </div>
                        <span class="text-xs font-medium text-default-600 dark:text-default-400">Top Up</span>
                    </button>
                </div>
            </LumexCardBody>
        </LumexCard>

        <!-- Savings Goals -->
        <LumexCard Class="rounded-2xl">
            <LumexCardBody Class="p-5">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="font-semibold text-default-800 dark:text-default-100">Savings Goals</h3>
                    <LumexButton Variant="Variant.Light" Size="Size.Small" IconOnly="true">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                    </LumexButton>
                </div>
                <div class="space-y-4">
                    @foreach (var goal in _savingsGoals)
                    {
                        <div>
                            <div class="flex items-center justify-between mb-2">
                                <div class="flex items-center gap-2">
                                    <span class="text-lg">@goal.Emoji</span>
                                    <span class="text-sm font-medium text-default-800 dark:text-default-100">@goal.Name</span>
                                </div>
                                <span class="text-xs text-default-500">@goal.Progress%</span>
                            </div>
                            <div class="h-2 bg-default-200 dark:bg-default-700 rounded-full overflow-hidden mb-1">
                                <div class="h-full rounded-full @goal.BarColor" style="width: @(goal.Progress)%"></div>
                            </div>
                            <div class="flex justify-between text-xs text-default-400">
                                <span>$@goal.Current.ToString("N0")</span>
                                <span>$@goal.Target.ToString("N0")</span>
                            </div>
                        </div>
                    }
                </div>
            </LumexCardBody>
        </LumexCard>

        <!-- Upcoming Bills -->
        <LumexCard Class="rounded-2xl">
            <LumexCardBody Class="p-5">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="font-semibold text-default-800 dark:text-default-100">Upcoming Bills</h3>
                    <LumexChip Size="Size.Small" Variant="ChipVariant.Flat" Color="ThemeColor.Warning">3 due</LumexChip>
                </div>
                <div class="space-y-3">
                    @foreach (var bill in _upcomingBills)
                    {
                        <div class="flex items-center gap-3 p-3 rounded-xl bg-default-100 dark:bg-default-800">
                            <div class="w-10 h-10 rounded-lg @bill.IconBg flex items-center justify-center flex-shrink-0">
                                @bill.Icon
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium text-default-800 dark:text-default-100 truncate">@bill.Name</p>
                                <p class="text-xs text-default-500">Due @bill.DueDate.ToString("MMM d")</p>
                            </div>
                            <p class="font-semibold text-default-800 dark:text-default-100">$@bill.Amount</p>
                        </div>
                    }
                </div>
            </LumexCardBody>
        </LumexCard>
    </aside>
</div>

