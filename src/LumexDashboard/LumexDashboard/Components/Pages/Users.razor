@page "/users"
@using LumexUI
@using LumexUI.Common
@rendermode InteractiveServer

<PageTitle>Users Management</PageTitle>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-default-900 dark:text-white">Users Management</h1>
            <p class="text-default-500 mt-1">Manage your users and their roles</p>
        </div>
        <LumexButton Color="ThemeColor.Primary" OnClick="ShowAddUserModal">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add User
        </LumexButton>
    </div>

    <!-- Filters -->
    <LumexCard>
        <LumexCardBody Class="p-4">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1 relative">
                    <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-default-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <input type="text" @bind="_searchQuery" @bind:event="oninput" placeholder="Search users..." class="w-full pl-10 pr-4 py-2 text-sm bg-default-100 dark:bg-default-800 border border-default-200 dark:border-default-700 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent text-default-900 dark:text-white placeholder-default-400" />
                </div>
                <select @bind="_statusFilter" class="w-full md:w-40 px-4 py-2 text-sm bg-default-100 dark:bg-default-800 border border-default-200 dark:border-default-700 rounded-lg focus:ring-2 focus:ring-primary text-default-900 dark:text-white">
                    <option value="all">All Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                    <option value="pending">Pending</option>
                </select>
                <select @bind="_roleFilter" class="w-full md:w-40 px-4 py-2 text-sm bg-default-100 dark:bg-default-800 border border-default-200 dark:border-default-700 rounded-lg focus:ring-2 focus:ring-primary text-default-900 dark:text-white">
                    <option value="all">All Roles</option>
                    <option value="admin">Admin</option>
                    <option value="editor">Editor</option>
                    <option value="viewer">Viewer</option>
                </select>
            </div>
        </LumexCardBody>
    </LumexCard>

    <!-- Users Table -->
    <LumexCard>
        <LumexCardBody Class="p-0">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-default-50 dark:bg-default-800">
                        <tr>
                            <th class="text-left text-xs font-semibold text-default-500 uppercase tracking-wider px-6 py-4">User</th>
                            <th class="text-left text-xs font-semibold text-default-500 uppercase tracking-wider px-6 py-4">Role</th>
                            <th class="text-left text-xs font-semibold text-default-500 uppercase tracking-wider px-6 py-4">Status</th>
                            <th class="text-left text-xs font-semibold text-default-500 uppercase tracking-wider px-6 py-4">Last Active</th>
                            <th class="text-left text-xs font-semibold text-default-500 uppercase tracking-wider px-6 py-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-default-200 dark:divide-default-700">
                        @foreach (var user in FilteredUsers)
                        {
                            <tr class="hover:bg-default-50 dark:hover:bg-default-800/50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <LumexAvatar Name="@user.Name" Size="Size.Medium" />
                                        <div>
                                            <p class="text-sm font-medium text-default-900 dark:text-white">@user.Name</p>
                                            <p class="text-xs text-default-500">@user.Email</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <LumexChip Size="Size.Small" Variant="ChipVariant.Flat" Color="@GetRoleColor(user.Role)">@user.Role</LumexChip>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <span class="@GetStatusDotClass(user.Status) w-2 h-2 rounded-full"></span>
                                        <span class="text-sm text-default-600 dark:text-default-400">@user.Status</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm text-default-600 dark:text-default-400">@user.LastActive</td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <LumexButton Variant="Variant.Light" Size="Size.Small" IsIconOnly="true">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                                            </svg>
                                        </LumexButton>
                                        <LumexButton Variant="Variant.Light" Size="Size.Small" Color="ThemeColor.Danger" IsIconOnly="true">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                        </LumexButton>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <div class="flex items-center justify-between px-6 py-4 border-t border-default-200 dark:border-default-700">
                <p class="text-sm text-default-500">Showing @(_currentPage * _pageSize - _pageSize + 1) to @Math.Min(_currentPage * _pageSize, _users.Count) of @_users.Count results</p>
                <div class="flex gap-2">
                    <LumexButton Variant="Variant.Outlined" Size="Size.Small" Disabled="@(_currentPage == 1)" OnClick="PreviousPage">Previous</LumexButton>
                    <LumexButton Variant="Variant.Outlined" Size="Size.Small" Disabled="@(_currentPage * _pageSize >= _users.Count)" OnClick="NextPage">Next</LumexButton>
                </div>
            </div>
        </LumexCardBody>
    </LumexCard>
</div>

@code {
    private string _searchQuery = "";
    private string _statusFilter = "all";
    private string _roleFilter = "all";
    private int _currentPage = 1;
    private int _pageSize = 10;

    private List<UserData> _users = new()
    {
        new("John Doe", "john.doe@example.com", "Admin", "Active", "2 minutes ago"),
        new("Jane Smith", "jane.smith@example.com", "Editor", "Active", "5 minutes ago"),
        new("Robert Johnson", "robert.j@example.com", "Viewer", "Inactive", "2 days ago"),
        new("Emily Davis", "emily.d@example.com", "Admin", "Active", "1 hour ago"),
        new("Michael Brown", "m.brown@example.com", "Editor", "Pending", "Just now"),
        new("Sarah Wilson", "s.wilson@example.com", "Viewer", "Active", "30 minutes ago"),
        new("David Lee", "david.lee@example.com", "Editor", "Active", "3 hours ago"),
        new("Lisa Anderson", "l.anderson@example.com", "Viewer", "Inactive", "1 week ago"),
        new("Chris Martin", "c.martin@example.com", "Admin", "Active", "15 minutes ago"),
        new("Amy Taylor", "amy.t@example.com", "Editor", "Pending", "4 hours ago"),
        new("James White", "j.white@example.com", "Viewer", "Active", "1 day ago"),
        new("Karen Harris", "k.harris@example.com", "Editor", "Active", "20 minutes ago")
    };

    private IEnumerable<UserData> FilteredUsers => _users
        .Where(u => string.IsNullOrEmpty(_searchQuery) || 
                    u.Name.Contains(_searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    u.Email.Contains(_searchQuery, StringComparison.OrdinalIgnoreCase))
        .Where(u => _statusFilter == "all" || u.Status.Equals(_statusFilter, StringComparison.OrdinalIgnoreCase))
        .Where(u => _roleFilter == "all" || u.Role.Equals(_roleFilter, StringComparison.OrdinalIgnoreCase))
        .Skip((_currentPage - 1) * _pageSize)
        .Take(_pageSize);

    private ThemeColor GetRoleColor(string role) => role switch
    {
        "Admin" => ThemeColor.Primary,
        "Editor" => ThemeColor.Secondary,
        _ => ThemeColor.Default
    };

    private string GetStatusDotClass(string status) => status switch
    {
        "Active" => "bg-success",
        "Inactive" => "bg-default-400",
        "Pending" => "bg-warning",
        _ => "bg-default-400"
    };

    private void ShowAddUserModal()
    {
        // Modal logic would go here
    }

    private void PreviousPage()
    {
        if (_currentPage > 1) _currentPage--;
    }

    private void NextPage()
    {
        if (_currentPage * _pageSize < _users.Count) _currentPage++;
    }

    private record UserData(string Name, string Email, string Role, string Status, string LastActive);
}
