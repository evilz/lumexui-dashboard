@page "/streaming"

<PageTitle>Streaming - LumexDashboard</PageTitle>

<div class="flex flex-col lg:flex-row gap-6 min-h-screen">
    <!-- Left Sidebar - Streaming Navigation (hidden on mobile) -->
    <DesktopOnly Class="w-56 flex-shrink-0 space-y-6">
        <!-- Logo/Brand -->
        <div class="flex items-center gap-3 px-2">
            <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-red-500 to-pink-600 flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                </svg>
            </div>
            <span class="text-xl font-bold text-foreground">StreamX</span>
        </div>

        <!-- Main Navigation -->
        <LumexCard Class="p-2">
            <nav class="space-y-1">
                <button class="w-full flex items-center gap-3 px-3 py-2.5 rounded-lg bg-primary/10 text-primary font-medium">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                    <span>Home</span>
                </button>
                <button class="w-full flex items-center gap-3 px-3 py-2.5 rounded-lg text-default-500 hover:bg-default-100 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    <span>Discover</span>
                </button>
                <button class="w-full flex items-center gap-3 px-3 py-2.5 rounded-lg text-default-500 hover:bg-default-100 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                    </svg>
                    <span>Watch List</span>
                    <LumexChip Size="Size.Small" Variant="ChipVariant.Flat" Color="ThemeColor.Primary" Class="ml-auto">12</LumexChip>
                </button>
                <button class="w-full flex items-center gap-3 px-3 py-2.5 rounded-lg text-default-500 hover:bg-default-100 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>Upcoming</span>
                </button>
                <button class="w-full flex items-center gap-3 px-3 py-2.5 rounded-lg text-default-500 hover:bg-default-100 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                    </svg>
                    <span>Downloads</span>
                    <LumexChip Size="Size.Small" Variant="ChipVariant.Flat" Color="ThemeColor.Success" Class="ml-auto">3</LumexChip>
                </button>
            </nav>
        </LumexCard>

        <!-- Categories -->
        <LumexCard Class="p-4">
            <h3 class="text-sm font-semibold text-default-500 uppercase tracking-wider mb-3">Categories</h3>
            <nav class="space-y-1">
                @foreach (var category in _categories)
                {
                    <button class="w-full flex items-center gap-3 px-3 py-2 rounded-lg text-default-500 hover:bg-default-100 transition-colors text-sm">
                        <span class="w-2 h-2 rounded-full @category.Color"></span>
                        <span>@category.Name</span>
                    </button>
                }
            </nav>
        </LumexCard>

        <!-- Continue Watching -->
        <LumexCard Class="p-4">
            <h3 class="text-sm font-semibold text-default-500 uppercase tracking-wider mb-3">Continue Watching</h3>
            <div class="space-y-3">
                @foreach (var show in _continueWatching.Take(3))
                {
                    <div class="group cursor-pointer">
                        <div class="relative aspect-video rounded-lg overflow-hidden mb-2">
                            <div class="absolute inset-0 bg-gradient-to-br @show.Gradient"></div>
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity bg-black/40">
                                <div class="w-8 h-8 rounded-full bg-white/90 flex items-center justify-center">
                                    <svg class="w-4 h-4 text-default-900" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z"/>
                                    </svg>
                                </div>
                            </div>
                            <div class="absolute bottom-0 left-0 right-0 h-1 bg-default-300">
                                <div class="h-full bg-primary" style="width: @(show.Progress)%"></div>
                            </div>
                        </div>
                        <p class="text-xs font-medium text-default-700 truncate">@show.Title</p>
                        <p class="text-xs text-default-500">@show.Episode</p>
                    </div>
                }
            </div>
        </LumexCard>
    </DesktopOnly>

    <!-- Main Content Area -->
    <div class="flex-1 space-y-6 min-w-0">
        <!-- Search Bar and Category Filters -->
        <div class="flex items-center gap-4">
            <div class="flex-1 relative">
                <LumexTextbox Placeholder="Search movies, shows, actors..." Class="pl-10 w-full">
                    <StartContent>
                        <svg class="w-5 h-5 text-default-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </StartContent>
                </LumexTextbox>
            </div>
            <div class="flex items-center gap-2">
                @foreach (var filter in _filters)
                {
                    <LumexButton Variant="@(filter.Active ? Variant.Solid : Variant.Flat)" 
                                 Color="@(filter.Active ? ThemeColor.Primary : ThemeColor.Default)"
                                 Size="Size.Small"
                                 Radius="Radius.Full">
                        @filter.Name
                    </LumexButton>
                }
            </div>
        </div>

        <!-- Featured Show -->
        <LumexCard Class="relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-r from-violet-600 via-purple-600 to-fuchsia-600"></div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
            <div class="relative p-8 flex items-end min-h-[360px]">
                <div class="flex-1 space-y-4">
                    <div class="flex items-center gap-2">
                        <LumexChip Size="Size.Small" Variant="ChipVariant.Solid" Color="ThemeColor.Danger">NEW</LumexChip>
                        <LumexChip Size="Size.Small" Variant="ChipVariant.Flat" Class="bg-white/20 text-white">4K Ultra HD</LumexChip>
                        <LumexChip Size="Size.Small" Variant="ChipVariant.Flat" Class="bg-white/20 text-white">Dolby Atmos</LumexChip>
                    </div>
                    <h1 class="text-4xl font-bold text-white">The Midnight Chronicles</h1>
                    <p class="text-default-200 max-w-xl text-sm leading-relaxed">
                        In a world where darkness holds ancient secrets, a young detective discovers her ability to see beyond the veil. 
                        As she unravels a conspiracy spanning centuries, she must choose between the life she knows and the destiny that awaits.
                    </p>
                    <div class="flex items-center gap-4 text-sm text-default-300">
                        <span class="flex items-center gap-1">
                            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <span>9.2</span>
                        </span>
                        <span>2025</span>
                        <span>3 Seasons</span>
                        <span>Sci-Fi, Thriller</span>
                    </div>
                    <div class="flex items-center gap-3 pt-2">
                        <LumexButton Color="ThemeColor.Primary" Size="Size.Large" Radius="Radius.Full" Class="gap-2">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M8 5v14l11-7z"/>
                            </svg>
                            Watch Now
                        </LumexButton>
                        <LumexButton Variant="Variant.Flat" Class="bg-white/20 text-white hover:bg-white/30" Size="Size.Large" Radius="Radius.Full">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                        </LumexButton>
                        <LumexButton Variant="Variant.Flat" Class="bg-white/20 text-white hover:bg-white/30" Size="Size.Large" Radius="Radius.Full">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                            </svg>
                        </LumexButton>
                    </div>
                </div>
                <div class="hidden xl:block w-48">
                    <!-- Poster placeholder -->
                </div>
            </div>
        </LumexCard>

        <!-- New Releases Carousel -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold text-foreground">New Releases</h2>
                <LumexButton Variant="Variant.Light" Color="ThemeColor.Primary" Size="Size.Small">
                    See All
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </LumexButton>
            </div>
            <div class="flex gap-4 overflow-x-auto pb-4 -mx-2 px-2 scrollbar-hide">
                @foreach (var show in _newReleases)
                {
                    <div class="flex-shrink-0 w-44 group cursor-pointer">
                        <div class="relative aspect-[2/3] rounded-xl overflow-hidden mb-3 shadow-lg">
                            <div class="absolute inset-0 bg-gradient-to-br @show.Gradient"></div>
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 bg-black/50">
                                <div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center transform scale-75 group-hover:scale-100 transition-transform">
                                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z"/>
                                    </svg>
                                </div>
                            </div>
                            @if (show.IsNew)
                            {
                                <div class="absolute top-2 left-2">
                                    <LumexChip Size="Size.Small" Variant="ChipVariant.Solid" Color="ThemeColor.Danger">NEW</LumexChip>
                                </div>
                            }
                            <div class="absolute bottom-2 right-2 flex items-center gap-1 px-2 py-1 rounded-full bg-black/60 text-white text-xs">
                                <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                </svg>
                                @show.Rating
                            </div>
                        </div>
                        <h3 class="font-medium text-default-800 text-sm truncate">@show.Title</h3>
                        <p class="text-xs text-default-500">@show.Genre • @show.Year</p>
                    </div>
                }
            </div>
        </div>

        <!-- Ongoing Series -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold text-foreground">Ongoing Series</h2>
                <LumexButton Variant="Variant.Light" Color="ThemeColor.Primary" Size="Size.Small">
                    See All
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </LumexButton>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4">
                @foreach (var series in _ongoingSeries)
                {
                    <LumexCard Class="p-0 overflow-hidden group cursor-pointer hover:shadow-xl transition-shadow">
                        <div class="flex">
                            <div class="relative w-24 h-32 flex-shrink-0">
                                <div class="absolute inset-0 bg-gradient-to-br @series.Gradient"></div>
                                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity bg-black/40">
                                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z"/>
                                    </svg>
                                </div>
                            </div>
                            <div class="flex-1 p-3 flex flex-col justify-between">
                                <div>
                                    <h3 class="font-semibold text-default-800 text-sm line-clamp-1">@series.Title</h3>
                                    <p class="text-xs text-default-500 mt-1">@series.Genre</p>
                                    <div class="flex items-center gap-2 mt-2">
                                        <span class="flex items-center gap-1 text-xs">
                                            <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                            </svg>
                                            <span class="text-default-500">@series.Rating</span>
                                        </span>
                                        <span class="text-xs text-default-400">•</span>
                                        <span class="text-xs text-default-500">S@(series.Season)</span>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <div class="flex items-center justify-between text-xs text-default-500 mb-1">
                                        <span>Episode @series.CurrentEp/@series.TotalEps</span>
                                        <span>@(Math.Round((double)series.CurrentEp / series.TotalEps * 100))%</span>
                                    </div>
                                    <div class="h-1.5 rounded-full bg-default-200 overflow-hidden">
                                        <div class="h-full bg-primary rounded-full transition-all" style="width: @(Math.Round((double)series.CurrentEp / series.TotalEps * 100))%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </LumexCard>
                }
            </div>
        </div>

        <!-- Top 10 This Week -->
        <div>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold text-foreground">Top 10 This Week</h2>
                <LumexButton Variant="Variant.Light" Color="ThemeColor.Primary" Size="Size.Small">
                    See All
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </LumexButton>
            </div>
            <div class="flex gap-4 overflow-x-auto pb-4 -mx-2 px-2 scrollbar-hide">
                @for (int i = 0; i < _top10.Count; i++)
                {
                    var show = _top10[i];
                    var rank = i + 1;
                    <div class="flex-shrink-0 w-32 group cursor-pointer relative">
                        <div class="absolute -left-2 -bottom-2 text-7xl font-black text-default-200 select-none z-0" style="font-family: 'Arial Black', sans-serif;">
                            @rank
                        </div>
                        <div class="relative aspect-[2/3] rounded-xl overflow-hidden shadow-lg z-10 ml-4">
                            <div class="absolute inset-0 bg-gradient-to-br @show.Gradient"></div>
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 bg-black/50">
                                <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center">
                                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z"/>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Right Sidebar -->
    <div class="hidden xl:block w-72 flex-shrink-0 space-y-6">
        <!-- User Profile -->
        <LumexCard Class="p-4">
            <div class="flex items-center gap-3 mb-4">
                <LumexAvatar Name="Alex Morgan" Size="Size.Large" Src="https://i.pravatar.cc/150?img=33" />
                <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-foreground truncate">Alex Morgan</h3>
                    <p class="text-xs text-default-500">Premium Member</p>
                </div>
                <LumexButton Variant="Variant.Light" Size="Size.Small" Radius="Radius.Full" IconOnly="true">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                </LumexButton>
            </div>
            <div class="grid grid-cols-3 gap-2 text-center">
                <div class="p-2 rounded-lg bg-default-100">
                    <p class="text-lg font-bold text-foreground">247</p>
                    <p class="text-xs text-default-500">Watched</p>
                </div>
                <div class="p-2 rounded-lg bg-default-100">
                    <p class="text-lg font-bold text-foreground">12</p>
                    <p class="text-xs text-default-500">Watchlist</p>
                </div>
                <div class="p-2 rounded-lg bg-default-100">
                    <p class="text-lg font-bold text-foreground">89</p>
                    <p class="text-xs text-default-500">Favorites</p>
                </div>
            </div>
        </LumexCard>

        <!-- Popular Right Now -->
        <LumexCard Class="p-4">
            <div class="flex items-center justify-between mb-4">
                <h3 class="font-semibold text-foreground">Popular Right Now</h3>
                <LumexChip Size="Size.Small" Variant="ChipVariant.Flat" Color="ThemeColor.Danger" Class="animate-pulse">LIVE</LumexChip>
            </div>
            <div class="space-y-3">
                @foreach (var show in _popularNow)
                {
                    <div class="flex items-center gap-3 p-2 rounded-lg hover:bg-default-100 cursor-pointer transition-colors group">
                        <div class="relative w-12 h-12 rounded-lg overflow-hidden flex-shrink-0">
                            <div class="absolute inset-0 bg-gradient-to-br @show.Gradient"></div>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h4 class="text-sm font-medium text-default-800 truncate">@show.Title</h4>
                            <p class="text-xs text-default-500">@show.Viewers viewers</p>
                        </div>
                        <div class="opacity-0 group-hover:opacity-100 transition-opacity">
                            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M8 5v14l11-7z"/>
                            </svg>
                        </div>
                    </div>
                }
            </div>
        </LumexCard>

        <!-- Your Favorites -->
        <LumexCard Class="p-4">
            <div class="flex items-center justify-between mb-4">
                <h3 class="font-semibold text-foreground">Your Favorites</h3>
                <LumexButton Variant="Variant.Light" Size="Size.Small" IconOnly="true">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                    </svg>
                </LumexButton>
            </div>
            <div class="space-y-3">
                @foreach (var show in _favorites)
                {
                    <div class="flex items-center gap-3 p-2 rounded-lg hover:bg-default-100 cursor-pointer transition-colors">
                        <div class="relative w-10 h-14 rounded-lg overflow-hidden flex-shrink-0">
                            <div class="absolute inset-0 bg-gradient-to-br @show.Gradient"></div>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h4 class="text-sm font-medium text-default-800 truncate">@show.Title</h4>
                            <div class="flex items-center gap-2 mt-1">
                                <span class="flex items-center gap-1 text-xs">
                                    <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                    </svg>
