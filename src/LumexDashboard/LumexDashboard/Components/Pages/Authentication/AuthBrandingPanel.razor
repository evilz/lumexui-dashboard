<DesktopOnly Display="flex" Class="relative flex-col bg-zinc-900 p-10 text-white">
    <div class="absolute inset-0 bg-zinc-900"></div>
    
    <!-- Logo -->
    <div class="relative z-20 flex items-center text-lg font-medium">
        <AuthLogo Class="mr-2 h-6 w-6" />
        Acme Inc
    </div>
    
    <!-- Testimonial -->
    <div class="relative z-20 mt-auto">
        <blockquote class="space-y-2">
            <p class="text-lg">"@Quote"</p>
            <footer class="text-sm text-zinc-400">@Author</footer>
        </blockquote>
    </div>
</DesktopOnly>

@code {
    [Parameter] public string Quote { get; set; } = "This library has saved me countless hours of work and helped me deliver stunning designs to my clients faster than ever before.";
    [Parameter] public string Author { get; set; } = "Sofia Davis";
}
