@inherits LayoutComponentBase

<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    <aside class="@(_sidebarOpen ? "translate-x-0" : "-translate-x-full") fixed lg:relative lg:translate-x-0 z-30 w-64 h-full bg-default-50 dark:bg-default-900 border-r border-default-200 dark:border-default-800 transition-transform duration-300 ease-in-out">
        <div class="flex flex-col h-full">
            <!-- Logo -->
            <div class="flex items-center gap-3 px-6 py-5 border-b border-default-200 dark:border-default-800">
                <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                    </svg>
                </div>
                <span class="text-lg font-semibold text-default-900 dark:text-white">LumexDashboard</span>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 px-4 py-6 space-y-1 overflow-y-auto">
                <NavMenu />
            </nav>

            <!-- User Profile -->
            <div class="px-4 py-4 border-t border-default-200 dark:border-default-800">
                <div class="flex items-center gap-3">
                    <LumexAvatar Name="John Doe" Size="@Size.Small" />
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-default-900 dark:text-white truncate">John Doe</p>
                        <p class="text-xs text-default-500 truncate">admin@example.com</p>
                    </div>
                </div>
            </div>
        </div>
    </aside>

    <!-- Overlay for mobile -->
    @if (_sidebarOpen)
    {
        <div class="fixed inset-0 bg-black/50 z-20 lg:hidden" @onclick="ToggleSidebar"></div>
    }

    <!-- Main Content Area -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top Bar -->
        <LumexNavbar Bordered="@true"
                     Sticky="@true"
                     Classes="@_navbarClasses">
            <LumexNavbarContent>
                <!-- Mobile Menu Toggle -->
                <button class="lg:hidden p-2 rounded-lg hover:bg-default-100 dark:hover:bg-default-800" @onclick="ToggleSidebar">
                    <svg class="w-6 h-6 text-default-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
                
                <!-- Search -->
                <LumexTextbox Type="@InputType.Search"
                              Size="@Size.Small"
                              Placeholder="Type to search..."
                              Classes="@_inputClasses"
                              Class="hidden sm:flex">
                    <StartContent>
                        <svg class="w-4 h-4 text-default-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </StartContent>
                </LumexTextbox>
            </LumexNavbarContent>

            <LumexNavbarContent Align="@Align.End">
                <!-- Notifications -->
                <LumexNavbarItem>
                    <NotificationBell />
                </LumexNavbarItem>
                
                <!-- Theme Toggle -->
                <LumexNavbarItem>
                    <ThemeToggle />
                </LumexNavbarItem>
            </LumexNavbarContent>
        </LumexNavbar>

        <!-- Page Content -->
        <main class="flex-1 overflow-y-auto bg-default-100 dark:bg-default-950 p-4 lg:p-6">
            @Body
        </main>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _sidebarOpen = false;

    private NavbarSlots _navbarClasses = new()
    {
        Base = "border-b-2 border-default-100 bg-default-50 dark:bg-default-900",
        Content = "gap-3"
    };

    private InputFieldSlots _inputClasses = new()
    {
        Base = "max-w-full sm:max-w-[16rem] h-8",
        Input = "text-tiny"
    };

    private void ToggleSidebar()
    {
        _sidebarOpen = !_sidebarOpen;
    }
}
